{
  "name": "telegram-bot",
  "version": "2.0.0",
  "description": "Ukrainian Telegram bot with sentiment analysis, NLP conversation, and atmosphere enhancement",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:unit": "jest tests/ --testPathIgnorePatterns=tests/integration/",
    "test:integration": "jest tests/integration/",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "deploy:vercel": "vercel --prod",
    "deploy:render": "echo 'Push to main branch to deploy on Render'",
    "cli": "ts-node src/index.ts --cli",
    "cli:stats": "ts-node src/index.ts --cli --stats",
    "cli:config": "ts-node src/index.ts --cli --config",
    "cli:test": "ts-node src/index.ts --cli --test-mode",
    "cli:health": "ts-node src/index.ts --cli --health",
    "cli:validate": "ts-node src/index.ts --cli --validate",
    "cli:features": "ts-node src/index.ts --cli --features"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "compromise": "^14.14.4",
    "dotenv": "^16.4.5",
    "fuse.js": "^7.1.0",
    "natural": "^7.1.0",
    "node-telegram-bot-api": "^0.66.0",
    "vader-sentiment": "^1.1.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.24",
    "@types/node-telegram-bot-api": "^0.64.8",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vercel": "^33.5.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "telegram",
    "bot",
    "ukrainian",
    "sentiment-analysis",
    "nlp",
    "chatbot"
  ]
}
