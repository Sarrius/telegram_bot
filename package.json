{
  "name": "telegram-bot",
  "version": "1.0.0",
  "description": "A Telegram bot with emoji reactions and replies",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:unit": "jest tests/ --testPathIgnorePatterns=tests/integration/",
    "test:integration": "jest tests/integration/",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "fuse.js": "^7.1.0",
    "node-telegram-bot-api": "^0.66.0",
    "vader-sentiment": "^1.1.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.24",
    "@types/node-telegram-bot-api": "^0.64.8",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
